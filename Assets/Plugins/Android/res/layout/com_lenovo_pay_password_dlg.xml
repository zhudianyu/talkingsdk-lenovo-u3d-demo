<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:minWidth="280dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/com_lenovo_pay_title_height"
        android:background="@color/com_lenovo_pay_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/com_lenovo_pay_title_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/com_lenovo_pay_title_close_selector"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dlg_pay_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="支付300V币"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/dlg_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textSize="8sp"
        android:text="登录帐号：18101021212"
        android:textColor="#808080" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="@string/com_lenovo_pay_password_dlg_hint_password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:singleLine="true"
        android:textColorHint="#808080"
        android:background="@drawable/com_lenovo_pay_password_edit_nofocus"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="8sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dlg_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/com_lenovo_pay_password_dlg_ok_btn_selector"
            android:text="@string/com_lenovo_pay_password_dlg_sure"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>