<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:minWidth="280dp"
    android:maxWidth="280dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/com_lenovo_pay_title_height"
        android:background="@color/com_lenovo_pay_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/com_lenovo_pay_dlg_title_text"
            android:textColor="@color/com_lenovo_pay_title_text"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dlg_tv"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:minWidth="280dp"
    	android:maxWidth="280dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minWidth="280dp"
    	android:maxWidth="280dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dlg_sure"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/com_lenovo_pay_dlg_ok_btn_selector"
            android:text="@string/com_lenovo_pay_dlg_ok_text" />

        <Button
            android:id="@+id/dlg_cancel"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/com_lenovo_pay_dlg_cancel_btn_selector"
            android:text="@string/com_lenovo_pay_dlg_cancel_text" />
    </LinearLayout>

</LinearLayout>