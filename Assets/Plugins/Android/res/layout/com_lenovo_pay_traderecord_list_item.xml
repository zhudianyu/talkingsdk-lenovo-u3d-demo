<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:layout_marginRight="5dp"
    android:background="@android:color/white"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/com_lenovo_pay_traderecord_node" />

        <TextView
            android:id="@+id/tv_content2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ff0000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_item_bg"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/trade_time_arrow"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/com_lenovo_pay_traderecord_node_arrow"
                android:gravity="center_vertical"
                android:textIsSelectable="false"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trade_time_tv"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:background="@drawable/com_lenovo_pay_traderecord_node_bg"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="2014年5月1日 19:08"
                android:textColor="#ffffff"
                android:textIsSelectable="false"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/trade_charge_amount_tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="充值金额："
                android:textIsSelectable="false"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trade_charge_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="left"
                android:text="100V币"
                android:textIsSelectable="false"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/trade_charge_way_tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值方式："
                android:textIsSelectable="false"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trade_charge_way_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="支付宝"
                android:textIsSelectable="false"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_record_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="16dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/trade_charge_result_tv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值结果："
                    android:textIsSelectable="false"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/trade_charge_result_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成功"
                    android:textIsSelectable="false"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/trade_charge_result_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/com_lenovo_pay_traderecord_detail_text"
                android:textColor="#191919"
                android:textIsSelectable="false"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/space_line"
            android:layout_width="2dp"
            android:layout_height="30dp" />
    </LinearLayout>

</LinearLayout>